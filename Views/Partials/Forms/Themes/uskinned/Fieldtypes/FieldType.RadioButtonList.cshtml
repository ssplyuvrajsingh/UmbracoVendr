@model Umbraco.Forms.Mvc.Models.FieldViewModel  
@using Umbraco.Forms.Mvc
  
@{ var i = 0; }
   
<div class="@Html.GetFormFieldClass(Model.FieldTypeName) radio radiobuttonlist" id="@Model.Id">
@foreach (Umbraco.Forms.Mvc.Models.PrevalueViewModel pv in Model.PreValues)  
{
    <label for="@string.Concat(Model.Id,"_",i)">

    <input type="radio" name="@Model.Id" id="@string.Concat(Model.Id,"_",i)" value="@pv.Value" 
    @if (Model.Mandatory) {<text>data-val="true" data-rule-required="true" data-msg-required="@Model.RequiredErrorMessage"</text>}
    @if (Model.ContainsValue(pv.Value)){<text>checked="checked"</text>} />
    
    @pv.Value</label>
    
    i++;
}
</div>